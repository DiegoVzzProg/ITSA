{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": ["es2020", "dom"], // Necesario para Window, Document, etc.
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/ts/*"]
        }
    },
    "include": [
        "resources/ts/**/*.ts",
        "resources/ts/global.d.ts",
        "vite.config.ts"
    ]
}
